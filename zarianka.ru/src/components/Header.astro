---
export interface Props {
    title?: string;
}

const { title } = Astro.props;
---
<header class="site-head">
    <div class="site-head-container">
        <a class="nav-burger" href="#">
            <div class="hamburger hamburger--collapse" aria-label="Меню" role="button" aria-controls="navigation">
                <div class="hamburger-box">
                    <div class="hamburger-inner" />
                </div>
            </div>
        </a>
        <nav id="swup" class="site-head-left">
            <ul class="nav" role="menu">
                <li class="nav-home" role="menuitem">
                    <a href="/">Главная</a>
                </li>
                <li class="nav-home" role="menuitem">
                    <a href="/bio">О мастере</a>
                </li>
                <li class="nav-home" role="menuitem">
                    <a href="/work">Работы</a>
                </li>
                <li class="nav-home" role="menuitem">
                    <a href="/news">Новости</a>
                </li>
                <li class="nav-home" role="menuitem">
                    <a href="/sold">Под заказ</a>
                </li>
                <li class="nav-home" role="menuitem">
                    <a href="/contact">Контакты</a>
                </li>
            </ul>
        </nav>
        <div class="site-head-center">
            <a class="site-head-logo" href="/">
                <img src="/img/logo.png" alt="Zarianka Pots" class="logo-img" />
                <span class="logo-text">{title || "Zarianka Pots"}</span>
            </a>
        </div>
        <div class="site-head-right">
            <div class="social-links">
                <a href="https://vk.ru/zarianka_pots" target="_blank" rel="noopener noreferrer" class="vk-link" aria-label="ВКонтакте">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M15.684 0H8.316C1.592 0 0 1.592 0 8.316v7.368C0 22.408 1.592 24 8.316 24h7.368C22.408 24 24 22.408 24 15.684V8.316C24 1.592 22.408 0 15.684 0zm3.692 17.123h-1.744c-.66 0-.862-.525-2.049-1.714-1.033-1.01-1.49-1.135-1.744-1.135-.356 0-.458.102-.458.593v1.566c0 .422-.135.677-1.254.677-1.846 0-3.896-1.118-5.335-3.202C4.624 10.857 4 8.983 4 8.58c0-.254.102-.491.593-.491h1.744c.44 0 .61.203.78.677.863 2.49 2.303 4.675 2.896 4.675.22 0 .322-.102.322-.66V9.721c-.068-1.186-.695-1.287-.695-1.71 0-.203.17-.407.44-.407h2.744c.373 0 .508.203.508.643v3.473c0 .372.17.508.271.508.22 0 .407-.136.813-.542 1.254-1.406 2.151-3.574 2.151-3.574.119-.254.322-.491.763-.491h1.744c.525 0 .643.271.525.643-.22 1.017-2.354 4.031-2.354 4.031-.186.305-.254.44 0 .78.186.254.796.779 1.203 1.253.745.847 1.32 1.558 1.473 2.049.17.474-.085.712-.576.712z"/>
                    </svg>
                </a>
                <button id="theme-toggle" class="theme-toggle" aria-label="Переключить тему">
                    <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
                    <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
                </button>
            </div>
        </div>
    </div>
</header>

<style>
.site-head-logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
}
.logo-img {
    flex-shrink: 0;
    width: auto;
    height: 56px;
    display: block;
}
.logo-text {
    font-family: var(--font-sans-serif);
    font-size: 2.2rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: var(--color-base);
}
.vk-link {
    display: flex;
    align-items: center;
    padding: 6px 8px;
    opacity: 0.6;
    color: var(--color-base);
    transition: opacity 0.2s;
}
.vk-link:hover {
    opacity: 1;
    text-decoration: none;
}
</style>
